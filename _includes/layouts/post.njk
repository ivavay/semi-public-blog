---
layout: layouts/base.njk
---
<h1>{{ title }}</h1>
<p class="date">{{ date | readableDate }}</p>
{% set comma = joiner() %}
{% for tag in tags -%}
  {% if tag !== 'posts' %}
    {{ comma() }} <span class="tags"><a href="/tags/{{tag}}">{{ tag }}</a></span>
  {% endif %}
{%- endfor %}
<br><br>
<p>{{ content | safe }}</p>
<br><br>
<img src="{{ featuredImage | url }}" alt="{{ featuredImage }}"></img>
<br><br><br><br>
